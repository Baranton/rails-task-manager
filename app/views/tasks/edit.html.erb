<h1>Edit a task</h1>

<ul>
  <li>Title: <%= @task.title %></li>
  <li>Details: <%= @task.details %></li>
  <li>Completed: <%= @task.completed %></li>
</ul>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= f.label :completed %>
    <%= hidden_field_tag :completed, false %>
    <%= check_box_tag :completed, checked = true%>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
